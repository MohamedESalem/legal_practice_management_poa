<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_partner_form_inherit_poa" model="ir.ui.view">
        <field name="name">res.partner.form.inherit.poa</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="POA Permissions / Authorities" name="poa_permissions">
                    <group>
                        <field name="poa_permission_ids" widget="many2many_checkboxes" options="{'no_create_edit': False, 'no_create': False}"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>


