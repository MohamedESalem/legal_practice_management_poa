<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_poa_permission_tree" model="ir.ui.view">
        <field name="name">poa.permission.list</field>
        <field name="model">poa.permission</field>
        <field name="arch" type="xml">
            <list string="POA Permissions">
                <field name="name_en" string="Permission Name (EN)"/>
                <field name="name_ar" string="Permission Name (AR)"/>
                <field name="description_en" string="Permission Description (EN)"/>
                <field name="description_ar" string="Permission Description (AR)"/>
            </list>
        </field>
    </record>

    <record id="view_poa_permission_form" model="ir.ui.view">
        <field name="name">poa.permission.form</field>
        <field name="model">poa.permission</field>
        <field name="arch" type="xml">
            <form string="POA Permission">
                <sheet>
                    <group string="Permission Name">
                        <field name="name_en" placeholder="e.g., Representation before the courts"/>
                        <field name="name_ar" placeholder="مثلاً: التمثيل امام المحاكم"/>
                    </group>
                    <group string="Permission Description">
                        <field name="description_en"/>
                        <field name="description_ar"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_poa_permission" model="ir.actions.act_window">
        <field name="name">POA Permissions</field>
        <field name="res_model">poa.permission</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p>Create and manage reusable POA permissions (English and Arabic).</p>
        </field>
    </record>

    <menuitem id="menu_poa_root" name="POA" parent="contacts.menu_contacts" sequence="90"/>
    <menuitem id="menu_poa_permissions" name="POA Permissions" parent="menu_poa_root" action="action_poa_permission" sequence="10"/>
</odoo>


